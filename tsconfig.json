{
	"compilerOptions": {
		"baseUrl": "src",
		"lib": ["dom", "es2017"],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "lib",
		"removeComments": true,
		"rootDir": "src",
		"sourceMap": true,
		"target": "es2017",
		"alwaysStrict": true,
		"experimentalDecorators":true,
		"emitDecoratorMetadata": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"strictNullChecks": true
	}
}
